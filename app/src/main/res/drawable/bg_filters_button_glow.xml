<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Плавное свечение через радиальный градиент -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="40dp"
                android:centerColor="#66FFD400"
                android:startColor="#66FFD400"
                android:endColor="#00FFD400" />
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Дополнительный слой свечения для интенсивности -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="30dp"
                android:centerColor="#80DAFF02"
                android:startColor="#80DAFF02"
                android:endColor="#00DAFF02" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Сама кнопка -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_yellow" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
