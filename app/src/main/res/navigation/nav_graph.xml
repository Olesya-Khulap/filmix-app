<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.filmix.presentation.ui.fragments.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.filmix.presentation.ui.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_filmsFragment"
            app:destination="@id/filmsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_showsFragment"
            app:destination="@id/showsFragment" />

        <action
            android:id="@+id/action_homeFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />

        <action
            android:id="@+id/action_homeFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/filmsFragment"
        android:name="com.example.filmix.presentation.ui.fragments.FilmsFragment"
        android:label="Films"
        tools:layout="@layout/fragment_films">

        <action
            android:id="@+id/action_filmsFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/showsFragment"
        android:name="com.example.filmix.presentation.ui.fragments.ShowsFragment"
        android:label="Shows"
        tools:layout="@layout/fragment_shows">

        <action
            android:id="@+id/action_showsFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.filmix.presentation.ui.fragments.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">

        <action
            android:id="@+id/action_searchFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.filmix.presentation.ui.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_authFragment"
            app:destination="@id/authFragment" />

        <action
            android:id="@+id/action_profileFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_profileFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />

        <action
            android:id="@+id/action_profileFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.filmix.presentation.ui.fragments.AuthFragment"
        android:label="Login"
        tools:layout="@layout/fragment_auth">

        <action
            android:id="@+id/action_authFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_authFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.filmix.presentation.ui.fragments.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_authFragment"
            app:destination="@id/authFragment" />

        <action
            android:id="@+id/action_registerFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.filmix.presentation.ui.fragments.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category">

        <argument
            android:name="categoryType"
            app:argType="com.example.filmix.domain.models.CategoryType" />

        <argument
            android:name="categoryTitle"
            app:argType="string" />

        <action
            android:id="@+id/action_categoryFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.filmix.presentation.ui.fragments.MovieDetailFragment"
        android:label="Movie Detail"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="movieId"
            app:argType="integer" />

        <argument
            android:name="movieTitle"
            app:argType="string" />

        <argument
            android:name="movieYear"
            app:argType="string" />

        <argument
            android:name="moviePoster"
            app:argType="string" />

        <argument
            android:name="movieRating"
            app:argType="float" />

        <argument
            android:name="movieBackdrop"
            app:argType="string" />

        <argument
            android:name="movieMediaType"
            app:argType="string" />

        <action
            android:id="@+id/action_movieDetailFragment_to_personDetailFragment"
            app:destination="@id/personDetailFragment" />

        <action
            android:id="@+id/action_movieDetailFragment_to_fullScreenImageFragment"
            app:destination="@id/fullScreenImageFragment" />
    </fragment>

    <fragment
        android:id="@+id/personDetailFragment"
        android:name="com.example.filmix.presentation.ui.fragments.PersonDetailFragment"
        android:label="Person Detail"
        tools:layout="@layout/fragment_person_detail">

        <argument
            android:name="personId"
            app:argType="integer" />

        <argument
            android:name="personName"
            app:argType="string" />

        <argument
            android:name="personPhoto"
            app:argType="string" />

        <action
            android:id="@+id/action_personDetailFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/fullScreenImageFragment"
        android:name="com.example.filmix.presentation.ui.fragments.FullScreenImageFragment"
        android:label="Full Screen Gallery"
        tools:layout="@layout/fragment_full_screen_image">

        <argument
            android:name="imageUrls"
            app:argType="string[]" />

        <argument
            android:name="currentPosition"
            app:argType="integer" />
    </fragment>


</navigation>
